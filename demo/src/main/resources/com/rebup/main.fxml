<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.rebup.MainController">

    <left>
        <VBox style="-fx-background-color: #022E5D;" spacing="40" alignment="TOP_CENTER" prefWidth="180">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="REBUP" style="-fx-text-fill: white; -fx-font-size: 24;" />
            </HBox>

            <VBox spacing="20" prefWidth="160">
                <Button text="  Prestamos" 
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" 
                        alignment="CENTER_LEFT" />
                <Button text="  Devoluciones" 
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" 
                        alignment="CENTER_LEFT" />
            </VBox>
        </VBox>
    </left>

    <top>
        <HBox style="-fx-background-color: #00907A;" alignment="CENTER" prefHeight="60" spacing="20">
            <padding>
                <Insets top="0" right="30" bottom="0" left="30"/>
            </padding>
            <Label text="PRESTAMOS" style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <TextField fx:id="txtBuscar" promptText="Buscar..." prefWidth="300" />
                <ComboBox fx:id="comboFiltro" prefWidth="150" promptText="Filtrar" />
            </HBox>

            <GridPane fx:id="gridEquipos" hgap="30" vgap="30" />

            <Button fx:id="btnConfirmar" text="Confirmar prÃ©stamo"
                    style="-fx-background-color: #00907A; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30;"
                    maxWidth="200" alignment="CENTER" />
        </VBox>
    </center>

</BorderPane>
